extends layout

block content
  h1= title
  p This hospitals are arranged in #{strong ascending order] with respect to their #[em location].

  - let uniqueHospital = new Set() // Create a set to store unique hospital names.
  if hospital_list.length
    ul
      each hospital in hospital_list
        - if (!uniqueHospital.has(hospital.name)) // Check if hospital is in set.
          - uniqueHospital.add(hospital.name)
          li
            a(href=hospital.url) #{hospital.name}
            |  (#{hospital.locality})

  else
    p No recorded hospitas yet.

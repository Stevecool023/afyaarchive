extends layout

block content

  h1= title

  div(style='margin-left:20px;margin-top:20px')
    
    p Date of Birth: #[em #{patient.date_birth_formatted}]
    p National ID: #[em #{patient.national_id}]
    p Chronic Illness: #[em #{patient.chronic_illness}]
    p #[Patient History: ]
      each history, index in patient.patient_history
        each diag in history.diagnosis
          a(href=history.url) #{diag}

extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='national_id') Enter ID:
      input#national_id.form-control(type='number', placeholder='please enter patient\'s ID' name='national_id' required)

      label(for='first_name') Enter First Name:
      input#first_name.form-control(type='text', placeholder='please enter patient\'s name' name='first_name' required)

      label(for='surname') Enter Surname:
            input#surname.form-control(type='text', placeholder='please enter surname' name='surname' required)

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
